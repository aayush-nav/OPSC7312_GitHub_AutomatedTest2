<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5883F"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Profile_back_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/back_arrow"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Profile_heading_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/Profile_Age_TextView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/left_cornered_grey"
            android:fontFamily="@font/inter"
            android:hint="Age:"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvProfileUserAge"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5.5"
            android:background="@drawable/all_cornered"
            android:fontFamily="@font/inter"
            android:hint="21"
            android:inputType="text"
            android:paddingEnd="12dp"
            android:textAlignment="viewEnd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imbChangeAge"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.5"
            android:layout_marginTop="25dp"
            android:src="@drawable/arrow_forward"
            android:background="@drawable/right_cornered_grey"
            android:backgroundTint="@color/black"
            android:padding="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/Profile_Gender_TextView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/left_cornered_grey"
            android:fontFamily="@font/inter"
            android:hint="Gender:"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvProfileUserGender"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5.5"
            android:background="@drawable/all_cornered"
            android:fontFamily="@font/inter"
            android:hint=" M"
            android:inputType="text"
            android:paddingEnd="12dp"
            android:textAlignment="viewEnd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imbChangeGender"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.5"
            android:layout_marginTop="25dp"
            android:src="@drawable/arrow_forward"
            android:background="@drawable/right_cornered_grey"
            android:backgroundTint="@color/black"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/Profile_Weight_TextView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/left_cornered_grey"
            android:fontFamily="@font/inter"
            android:hint="Weight:"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvProfileUserWeight"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5.5"
            android:background="@drawable/all_cornered"
            android:fontFamily="@font/inter"
            android:hint=" 63.4 kg"
            android:inputType="text"
            android:paddingEnd="12dp"
            android:textAlignment="viewEnd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imbChangeWeight"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.5"
            android:layout_marginTop="25dp"
            android:src="@drawable/arrow_forward"
            android:background="@drawable/right_cornered_grey"
            android:backgroundTint="@color/black"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/Profile_Height_TextView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/left_cornered_grey"
            android:fontFamily="@font/inter"
            android:hint="Height:"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvProfileUserHeight"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5.5"
            android:background="@drawable/all_cornered"
            android:fontFamily="@font/inter"
            android:hint=" 165 cm"
            android:inputType="text"
            android:paddingEnd="12dp"
            android:textAlignment="viewEnd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imbChangeHeight"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.5"
            android:layout_marginTop="25dp"
            android:src="@drawable/arrow_forward"
            android:background="@drawable/right_cornered_grey"
            android:backgroundTint="@color/black"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/Profile_Body_Mass_Index_TextView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="4.5"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/left_cornered_grey"
            android:fontFamily="@font/inter"
            android:hint="Body Mass Index:"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvProfileUserBMI"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:layout_weight="4"
            android:background="@drawable/all_cornered"
            android:fontFamily="@font/inter"
            android:hint=" 26.3"
            android:inputType="text"
            android:paddingEnd="12dp"
            android:textAlignment="viewEnd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/Profile_Change_Body_Mass_Index_ImageButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.5"
            android:layout_marginTop="25dp"
            android:src="@drawable/arrow_forward"
            android:background="@drawable/right_cornered_grey"
            android:backgroundTint="@color/black"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>